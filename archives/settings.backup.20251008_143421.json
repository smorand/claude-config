{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "includeCoAuthoredBy": false,
  "permissions": {
    "defaultMode": "bypassPermissions",
    "additionalDirectories": [
      "/Users/sebastien.morand/.logs",
      "/Users/sebastien.morand/projects/oa-data-btdpservices/btdp-framework-lib/modules/btdp-fastapi/src/"
    ]
  },
  "model": "sonnet",
  "enableAllProjectMcpServers": true,
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"/opt/homebrew/lib/node_modules/zelda-claude-code/hooks/zelda_hook.py\"",
            "timeout": 5
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"/opt/homebrew/lib/node_modules/zelda-claude-code/hooks/zelda_hook.py\"",
            "timeout": 5
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"/opt/homebrew/lib/node_modules/zelda-claude-code/hooks/zelda_hook.py\"",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"/opt/homebrew/lib/node_modules/zelda-claude-code/hooks/zelda_hook.py\"",
            "timeout": 5
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"/opt/homebrew/lib/node_modules/zelda-claude-code/hooks/zelda_hook.py\"",
            "timeout": 5
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline-script.sh"
  },
  "alwaysThinkingEnabled": true
}